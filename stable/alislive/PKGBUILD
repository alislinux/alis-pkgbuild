# Maintainer: Hayate Naka-mura <hayatehay.njb at gmail dot com>

pkgname=alislive
pkgver=24.01
pkgrel=2
pkgdesc='Copy calamares icon'
arch=('any')
url="https://github.com/alislinux/"
license=('BSD-3-Clause')
optdepends=('calamares')
source=("alis-calamares-desktop"
        "alis-calamares-desktop.desktop"
	"LICENSE")

sha256sums=('9f40d45517ff9898dca502372c9abdb3a2a8c4cb268547805b45c8fa6b8f2581'
            '799f6ec096348fc51feb8a0125b57f341094a39e4f674c05d1cdadb2f561ec2f'
            'd3f85f177f833e10b85f6903315edd32d3b558a22069cff4795425b888b00510')

package() {
	cd ${srcdir}
	install -Dm755 "${srcdir}/alis-calamares-desktop" "${pkgdir}/usr/bin/alis-calamares-desktop"
	install -Dm755 "${srcdir}/alis-calamares-desktop.desktop" "${pkgdir}/etc/xdg/autostart/alis-calamares-desktop.desktop"
	install -Dm755 "${srcdir}/LICENSE" "${pkgdir}/usr/licenses/${pkgname}/LICENSE"
}
