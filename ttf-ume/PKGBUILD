pkgname=ttf-ume
_pkgname=fonts-horai-umefont
pkgver=670
pkgrel=1
pkgdesc="Free Japanese Gothic/Mincho Font"
arch=('any')
url="https://osdn.jp/projects/ume-font/"
license=('MPlus')
depends=('fontconfig' 'xorg-mkfontscale')
source=(https://deb.debian.org/debian/pool/main/f/${_pkgname}/${_pkgname}_${pkgver}.orig.tar.xz)
md5sums=('f64c5d138a2abae71ede11f49c4d0977')
b2sums=('ad46d5adddbc6def06f4b50412411580dd4ca712fdb5082869aaf507877e0eb3ee0b9d4cf597b4c2b54efa477d1309e41aca77b6dfb93beb4b7f1067daa3c346')

package() {
  cd ${srcdir}

  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${_pkgname}-${pkgver}/*.ttf ${pkgdir}/usr/share/fonts/TTF

  install -D -m644 ${_pkgname}-${pkgver}/license.html \
          ${pkgdir}/usr/share/licenses/${pkgname}/COPYING.html
}
